<!--THEME AND STYLE-->
    <!-- Base application theme. -->
    <!-- White & no Action Bar -->
    <style name="FR_AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/c_dark_cyan</item>
        <item name="colorPrimaryDark">@color/c_sdark_cyan</item>
        <item name="colorAccent">@color/c_dark_cyan</item>
        <item name="android:textColor">@color/c_sdark_cyan</item>
        <item name="android:radioButtonStyle">@style/MyRadioButtonLight</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- Dark theme / No action bar / TextColor DARK -->
    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/c_dark_cyan</item>
        <item name="colorPrimaryDark">@color/c_sdark_cyan</item>
        <item name="colorAccent">@color/c_light_cyan</item>
        <item name="android:textColor">@color/c_pale_cyan</item>
        <item name="android:radioButtonStyle">@style/MyRadioButtonDark</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="toolbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d_elliot_action_bar_size</item>
        <item name="android:minHeight">@dimen/d_elliot_action_bar_size</item>
        <item name="titleTextColor">@color/c_pale_cyan</item>
        <!--<item name="android:elevation">2dp</item>-->
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/app_bar_white_text_elliot</item>
    </style>


    <!--Radio button text does not change according to main theme, have to change explicitly-->
    <style name="MyRadioButtonLight" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textColor">@color/c_sdark_cyan</item>
    </style>
    <style name="MyRadioButtonDark" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textColor">@color/c_pale_cyan</item>
    </style>


    <!--For TOOLBAR usage only: android:theme / toolbar.setPopupTheme-->
    <!--LIGHT BACKGROUND / WHITE TEXT IN TOOLBAR-->
    <style name="app_bar_white_text_elliot" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/c_pale_cyan</item>
    </style>
    <!--DARK BACKGROUND / WHITE TEXT IN TOOLBAR-->
    <style name="app_bar_white_text_dark_elliot" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/c_pale_cyan</item>
    </style>




    <!--<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->


    <!--To change the drawer button / up button color-->
    <style name="ElliotDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/c_pale_cyan</item>
    </style>


    <!-- COLOR BUTTON STYLE vs DEFAULT BUTTON STYLE-->
    <style name="style_for_coloured_button_and_text_size">
        <item name="android:theme">@style/ElliotColoredButton</item>
        <item name="android:textSize">@dimen/d_text_size_small</item>
    </style>

    <style name="style_for_default_button_and_text_size_no_theme">
        <item name="android:textSize">@dimen/d_text_size_small</item>
    </style>

    <style name="style_for_disabled_button_map">
        <item name="android:theme">@style/ElliotDisabledButton</item>
        <item name="android:textSize">@dimen/d_text_size_small</item>
    </style>






    <style name = "style_margin_for_edit_text_multiple">
        <item name="android:layout_marginBottom">@dimen/d_margin_top_bottom_for_multiple_edit_text</item>
        <item name="android:layout_marginTop">@dimen/d_margin_top_bottom_for_multiple_edit_text</item>
        <item name="android:layout_marginLeft">@dimen/d_margin_left_right_for_multiple_edit_text</item>
        <item name="android:layout_marginRight">@dimen/d_margin_left_right_for_multiple_edit_text</item>
    </style>


    <style name="ElliotColoredButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/c_dark_cyan</item>
        <item name="android:textColor">@color/c_pale_cyan</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ElliotDisabledButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/c_t_grey</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="ElliotTitleTextColor">
        <item name="titleTextColor">@color/c_white</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/logo</item>
    </style>

